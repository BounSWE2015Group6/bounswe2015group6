<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hodgepodge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hodgepodge.LandingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hodgepodge.SignInActivity"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name="com.hodgepodge.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.hodgepodge.HomePageActivity"
            android:label="@string/title_activity_home_page"

        </activity>
        <activity
            android:name="com.hodgepodge.ProfilePage"
            android:label="@string/title_activity_profile_page"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="com.hodgepodge.CreateTopicActivity" >
        </activity>
        <activity android:name="com.hodgepodge.PostAddActivity" >
        </activity>
        <activity android:name="com.hodgepodge.PostsListActivity" >
        </activity>
        <activity android:name="com.hodgepodge.PopularActivity" >
        </activity>
        <activity android:name="com.hodgepodge.CreateRelationActivity" >
        </activity>
        <activity android:name="com.hodgepodge.RecentActivity" >
        </activity>
    </application>

</manifest>