<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hodgepodge.CreateTopicActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:hint="Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleEditText"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:hint="Tags"
        android:id="@+id/tagsEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupEditText"
        android:hint="Group"
        android:layout_below="@+id/tagsEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:layout_alignRight="@+id/tagsEditText"
        android:layout_alignEnd="@+id/tagsEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Topic"
        android:id="@+id/createTopicButton"
        android:background="@drawable/apptheme_btn_default_focused_holo_light"
        android:onClick="createTopic"
        android:layout_below="@+id/groupEditText"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, Enter a title"
        android:id="@+id/errorCreateTopicTextView"
        android:textAlignment="center"
        android:singleLine="false"

        android:textColor="#FF0000"
        android:visibility="invisible"
        android:layout_below="@+id/createTopicButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
