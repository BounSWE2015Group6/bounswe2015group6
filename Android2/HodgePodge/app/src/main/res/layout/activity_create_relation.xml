<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hodgepodge.CreateRelationActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtTopic1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:hint="Topic1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtTopic1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Topic2"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:id="@+id/editTxtTopic2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtTopic2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Label"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:id="@+id/editTxtLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Relation"
        android:id="@+id/createRelationButton"
        android:layout_below="@+id/editTxtLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/apptheme_btn_default_focused_holo_light"
        android:onClick="createRelation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Illegal relation( please enter a valid topic name )"
        android:id="@+id/errorTextViewRelation"
        android:textAlignment="center"
        android:singleLine="false"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_below="@id/createRelationButton"
        android:textColor="#FF0000"
        android:visibility="invisible" />
</RelativeLayout>
